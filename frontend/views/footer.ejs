        <script>
            // Check if user is logged in.
            window.userLoggedIn = false;
            function isLoggedIn()
            {
                let accessToken = localStorage.getItem("access");
                if(accessToken != null)
                {
                    // If there is an access token in localStorage.
                    window.userLoggedIn = true;
                }
                if(window.userLoggedIn)
                {
                    // Register doesn't need to appear if user is logged in.
                    document.getElementById("auth-register").remove();
                    let loginLink = document.getElementById("auth-login");
                    loginLink.innerHTML = "Logout";
                    loginLink.href = "/";
                    loginLink.onclick = ()=>{ 
                        localStorage.removeItem("access");
                        localStorage.removeItem("refresh");
                        window.userLoggedIn = false;
                    }
                }
                else
                {
                    // A user who isn't logged in cannot view their basket or order history.
                    document.getElementById("auth-basket").remove();
                    document.getElementById("auth-history").remove();
                }
            }

            // JS to scroll to top of the page.
            let button = document.getElementById("footer-button");
            button.onclick = ()=>{
                window.scrollTo(0, 0);
            }
        
        </script>

